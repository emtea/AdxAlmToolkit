<?xml version="1.0"?>

<!--
Description: Enables .NET Framework 4.0 support for PowerShell
Install: Copy this file next to the powershell.exe file under the folder %WINDIR%\System32\WindowsPowerShell\v1.0\
-->

<configuration>
	<!-- http://msdn.microsoft.com/en-us/library/w4atty68.aspx -->
	<startup useLegacyV2RuntimeActivationPolicy="true">
		<supportedRuntime version="v4.0" />
		<supportedRuntime version="v2.0.50727" />
	</startup>
</configuration>